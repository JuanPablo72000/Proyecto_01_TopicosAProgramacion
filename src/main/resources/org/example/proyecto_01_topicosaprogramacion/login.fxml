<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane styleClass="root-pane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" maxHeight="450.0" maxWidth="380.0" minHeight="400.0" minWidth="300.0" spacing="25.0" styleClass="login-card" stylesheets="@styles.css">
         <children>
            <Label alignment="CENTER" styleClass="login-title" stylesheets="@styles.css" text="Login">
               <font>
                  <Font size="50.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Label>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/correo.png" />
                     </image>
                  </ImageView>
                  <TextField fx:id="textUser" promptText="Usuario" styleClass="text-input" stylesheets="@styles.css" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></TextField>
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
               <padding>
                  <Insets top="30.0" />
               </padding></HBox>
            <HBox layoutX="10.0" layoutY="44.0" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/candado.png" />
                     </image>
                  </ImageView>
                  <PasswordField fx:id="passUser" promptText="Contraseña" styleClass="text-input" stylesheets="@styles.css" HBox.hgrow="ALWAYS" />
               </children>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <Button fx:id="buttonLogin" mnemonicParsing="false" prefWidth="250.0" styleClass="login-button" stylesheets="@styles.css" text="Iniciar Sesión">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</StackPane>
